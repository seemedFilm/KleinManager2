{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "label": "restart",
        "type": "shell",
        "command": "docker logs -f kleinmanager",
        "dependsOrder": "sequence",
        "dependsOn": [
          "Docker Compose Down",
          "Update_env script",
          "Update_config script",
          "Docker Compose Up -d build"
        ],
        "group": "build",
        "problemMatcher": []
      },
      {
        "label": "Docker Compose Up -d build",
        "type": "shell",
        "command": "docker-compose up -d --build",
        "dependsOn": [
          "Update Git Env"
        ],
        "group": "build"
      },
      {
        "label": "Docker Compose Up -d",
        "type": "shell",
        "command": "docker-compose up -d",
        "group": "build"
      },
      {
        "label": "Docker Compose Down  --volumes --rmi all",
        "type": "shell",
        "command": "docker-compose down --volumes --rmi all",
        "group": "build"
      },
      {
        "label": "Docker Compose Down",
        "type": "shell",
        "command": "docker-compose down",
        "group": "build"
      },
      {
        "label": "Docker system prune",
        "type": "shell",
        "command": "docker system prune -f",
        "group": "build"
      },
      {
        "label": "Update_config script",
        "type": "shell",
        "command": "./update_config.sh",
        "group": "build"
      },
      {
        "label": "Update_env script",
        "type": "shell",
        "command": "./update_env.sh",
        "group": "build"
      }
    ]
}